# ChordSync Google TV App - Environment Variables
# Copy this file to .env and fill in your values

# Flask Secret Key (used for session encryption)
# Generate a random key with: python -c "import secrets; print(secrets.token_hex(16))"
FLASK_SECRET_KEY=your_secret_key_here

# Spotify API Credentials
# Use the same credentials as your main ChordSync app or create new ones at
# https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:5001/callback

# Main ChordSync App URL
# The URL where your main ChordSync app is running
CHORDSYNC_URL=http://localhost:5000

# Optional: Debug mode (set to False in production)
DEBUG=True